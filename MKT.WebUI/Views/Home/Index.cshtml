@model MKT.WebUI.Models.Home.HomeIndexViewModel

@{
    ViewData["Title"] = "Home Page";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Location
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalLocation</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-city fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Assigned Workshop Earning
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.AssignedWorkshopPriceTotal.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Total Assigned Workshop
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalAssignedWorkshop</div>
                        </div>
                        <div class="col-auto">
                            <i class="fab fa-shopify fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Future Workshop
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.FutureWorkshopCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fab fa-shopify fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card shadow dashboard-chart-card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Price Total By Location</h6>
                </div>
                <div class="card-body">
                    <div id="priceTotalByLocation"></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card shadow dashboard-chart-card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Total Order by Location</h6>
                </div>
                <div class="card-body">
                    <canvas id="totalOrderByLocation"></canvas>
                </div>
            </div>
        </div>
        
        <div class="col-xl-6 col-md-12">
            <div class="card shadow dashboard-chart-card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Price Total By Location</h6>
                </div>
                <div class="card-body">
                    <canvas id="priceTotalByLocationLineChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="/js/Controller/Home/HomeIndex.js"></script>
}

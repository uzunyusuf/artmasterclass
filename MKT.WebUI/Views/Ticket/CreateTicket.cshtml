@model MKT.WebUI.Models.Ticket.CreateTicketViewModel

@{
    ViewBag.Title = "Create Ticket";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Create a new ticket</h6>
                </div>
                <div class="card-body">
                    <form asp-controller="Ticket" asp-action="CreateTicket" method="post">
                        <div class="form-group">
                            <label><b>Title</b></label>
                            <input type="text" asp-for="NewTicket.Title" class="form-control" placeholder="Plase type ticket title here..." />
                        </div>
                        <div class="form-group">
                            <label><b>Description</b></label>
                            <textarea asp-for="NewTicket.Description" class="form-control" placeholder="Please type ticket descrition here..."></textarea>
                        </div>
                        
                        <div class="row justify-content-end">
                            <button class="btn btn-primary" type="button" onclick="PostWithRedirect(this, '/Ticket/Tickets')">SUBMIT</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
    
@model MKT.WebUI.Models.Announcement.CreateAnnouncementViewModel

@{
    ViewBag.Title = "Create Announcement";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-7 col-lg-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Create Announcement</h6>
                </div>
                <div class="card-body">
                    <form asp-controller="Announcement" asp-action="CreateAnnouncement" method="post">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" asp-for="Announcement.Title" placeholder="Please Type Announcement Title" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <textarea asp-for="Announcement.Description" placeholder="Description" class="form-control"></textarea>
                        </div>
                        
                        <div class="row justify-content-end">
                            <button class="btn btn-primary" type="button" onclick="PostWithFormRedirect(this)">SAVE</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-xl-5 col-lg-12 mt-lg-3 mt-xl-0 mt-md-3 mt-sm-3">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary"></h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered display w-100 mkt-datatable">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Description</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach(var announcement in Model.LastAnnouncementsList)
                            {
                                <tr>
                                    <td>@announcement.Id</td>
                                    <td>@announcement.Title</td>
                                    <td class="mkt-popover-hover" data-content="@announcement.Description">
                                         @(announcement.Description.Length < 50 ? announcement.Description : announcement.Description.Substring(0, 50) + "...")
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model MKT.WebUI.Models.Security.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "_EmptyLayout";
}
@section csses
{
    <link href="~/css/Login.css" rel="stylesheet" />
}
<div id="particles-js"></div>
<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image border-right"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Art Masterclass Appointment Management System</h1>
                                </div>
                                <form class="user" asp-controller="Security" asp-action="Login" method="post">
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-user"
                                               id="kullaniciAdiTxt"
                                               placeholder="username" asp-for="User.UserName">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control-user"
                                               id="passwordTxt" placeholder="Password" asp-for="User.Password">
                                    </div>
                                    <button type="submit"  class="btn btn-primary btn-user btn-block">
                                        Login
                                    </button>
                                    @if(@ViewData["ErrorMessage"] != null)
                                    {
                                        <div class="card bg-danger text-white shadow">
                                        <div class="card-body">
                                            @ViewData["ErrorMessage"]
                                        </div>
                                    </div>
                                    }
                                </form>
                                <hr>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/plugins/particles.js"></script>
    <script src="~/js/Controller/Security/Login.js"></script>
}

@model MKT.WebUI.Models.Admin.UpdateUserViewModel

@{
    ViewBag.Title = "Update User";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header">
                <h6 class="font-weight-bold text-primary">Update @Model.User.NameSurname</h6>
            </div>
            <div class="card-body">
                <form asp-controller="Admin" asp-action="UpdateUser" method="post">
                    <input type="text" asp-for="User.Id" class="d-none" />
                    <input type="text" asp-for="User.Password" class="d-none" />
                    <div class="form-group">
                        <label><b>Username</b></label>
                        <input class="form-control form-control-sm" asp-for="User.UserName" placeholder="Username" />
                    </div>
                    <div class="form-group">
                        <label><b>Name Surname</b></label>
                        <input class="form-control form-control-sm" asp-for="User.NameSurname" placeholder="Name Surname" />
                    </div>
                    <div class="form-group">
                        <label>
                            <b>Password (left blank if password will not update)</b>
                        </label>
                        <input type="password" asp-for="NewPassword" placeholder="New Password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><b>Email</b></label>
                        <input class="form-control form-control-sm" asp-for="User.Email" placeholder="Email" />
                    </div>
                    <div class="form-group">
                        <label><b>Role</b></label>
                        <select class="form-control form-control-sm mkt-select2" asp-for="User.Rol" asp-items="@Model.RolesSelectList">
                            <option selected="selected" disabled="disabled">- Select A Role -</option>
                        </select>
                    </div>
                    <div>
                        <label><b>Location</b></label>
                        <select class="form-control form-control-sm mkt-select2" asp-for="User.LocationId" asp-items="@Model.LocationsSelectList">
                            <option selected="selected" disabled="disabled">- Select a Location -</option>
                        </select>
                    </div>
                    
                    <div class="row justify-content-end mt-2">
                        <button type="button" class="btn btn-primary" onclick="PostWithFormRedirect(this)">Update User</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
